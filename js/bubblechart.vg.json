{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Inflation vs Gdp",
    "width": "container",
    "height": 300,
    "data": {
      "url": "https://raw.githubusercontent.com/eyaelmusse/data_visualisation_2/main/data/inflation_gdp.csv"
    },
    "params": [
        {
          "name": "Population_Above",
          "value": 0,
          "bind": {
            "input": "range",
            "min": 0,
            "max": 100000000,
            "step": 1000000,
            "name": "Minimum Population: "
          }
        },
        {
          "name": "Continent_selection",
          "bind": {
            "input": "select",
            "options": [
              null,
              "North America",
              "South America",
              "Europe",
              "Africa",
              "Asia",
              "Oceania"
            ],
            "labels": [
              "Show All",
              "North America",
              "South America",
              "Europe",
              "Africa",
              "Asia",
              "Oceania"
            ],
            "name": "Continent Selection: "
          }
        }
      ],
    "transform": [
      {"filter": "datum.Year == '2017'"},
      {"filter": "datum.Inflation > 1"},
      {"filter": "datum.population > Population_Above"},
      {"filter": "Continent_selection == null || datum.Continent == Continent_selection"}
    ],
    "encoding": {
      "x": {
        "field": "gdp",
        "type": "quantitative",
        "title": "Gdp",
        "axis": {"tickCount": 7},
        "scale": {"type": "log", "domain": [100000000, 1000000000000000]}
      },
      "y": {
        "field": "Inflation",
        "type": "quantitative",
        "axis": {"tickCount": 3},
        "scale": {"type": "log", "domain": [1, 1000]}
      }
    },
    "layer": [
      {
        "mark": "circle",
        "encoding": {
          "size": {
            "field": "population",
            "type": "quantitative",
            "scale": {
              "type": "threshold",
              "domain": [1000000, 10000000, 50000000, 100000000, 500000000],
              "range": [10, 50, 150, 200, 300, 400]
            }
          },
          "color": {
            "field": "Continent",
            "type": "nominal",
            "scale": {
              "domain": [
                "North America",
                "South America",
                "Europe",
                "Africa",
                "Asia",
                "Oceania"
              ],
              "range": [
                "#e41a1c",
                "#984ea3",
                "#ff7f00",
                "#a6cee3",
                "#377eb8",
                "#a65628"
              ]
            }
          },
          "opacity": {"value": 0.6},
          "tooltip": [
            {"field": "Country", "type": "nominal"},
            {"field": "Year", "type": "quantitative"},
            {"field": "Inflation", "type": "quantitative", "format": ".2f"}
          ]
        }
      },
      {
        "mark": {
            "type": "text",
            "align": "right",
            "baseline": "middle",
            "dx": -12,
            "fontSize": 11.5,
            "fontStyle": "italic"
          },
          "encoding": {
            "text": {"field": "Country", "type": "nominal"},
            "color": {"value": "black"},
            "opacity": {
              "condition": {
                "test": "datum['Country'] == 'Venezuela, RB' || datum['Country'] == 'Argentina' || datum['Country'] == 'China' || datum['Country'] == 'Congo, Dem. Rep.' || datum['Country'] == 'Burundi'",
                "value": 1
              },
              "value": 0
            },
            "tooltip": [
                {"field": "Country", "type": "nominal"},
                {"field": "Year", "type": "quantitative"},
                {"field": "Inflation", "type": "quantitative", "format": ".2f"}
            ]
          }
      }
    ]
  }